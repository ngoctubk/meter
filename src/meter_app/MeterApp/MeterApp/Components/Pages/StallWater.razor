@page "/StallWater/{StallCode}"

Mã gian hàng: @StallCode
<QuickGrid Items="@MeterDbContext.WaterMeters.Where(w => w.StallCode == StallCode).OrderByDescending(w => w.ToTimestamp)" Pagination="@pagination">
    <PropertyColumn Property="@(p => p.Value)" Title="Chỉ số nước" />
    <PropertyColumn Property="@(p => p.FromTimestamp.ToLocalTime())" Format="G" Title="Từ ngày" />
    <PropertyColumn Property="@(p => p.ToTimestamp.ToLocalTime())" Format="G"  Title="Đến ngày" />
</QuickGrid>
<Paginator State="@pagination" />